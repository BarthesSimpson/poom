{
  "name": "poom-server",
  "description": "backend server for brokering p2p video streaming sessions",
  "version": "0.0.0",
  "homepage": "",
  "private": true,
  "main": "src",
  "keywords": [
    "feathers"
  ],
  "author": {
    "name": "BarthesSimpson",
    "email": "d.s.frenk@gmail.com"
  },
  "contributors": [],
  "bugs": {},
  "directories": {
    "lib": "src",
    "test": "test/",
    "config": "config/"
  },
  "engines": {
    "node": "^13.0.0",
    "npm": ">= 3.0.0"
  },
  "scripts": {
    "build": "npm run build:ui && npm run build:backend",
    "build:ui": "NODE_ENV=production npm run compile:ui",
    "build:backend": "NODE_ENV=production npm run compile",
    "test": "npm run compile && npm run jest",
    "dev": "ts-node-dev --no-notify src/backend/src/",
    "dev:ui": "npm run start:ui",
    "start": "npm run build:backend && npm run serve:backend",
    "start:ui": "npm run build:ui && npm run serve:ui",
    "serve:backend": "NODE_ENV=production node lib/backend/src",
    "serve:ui": "http-server ./dist --brotli --cors --utc --port ${PORT:-1234}",
    "jest": "jest  --forceExit",
    "test:watch": "jest --watch",
    "compile": "rm -rf lib/ && rm -f tsconfig.tsbuildinfo && tsc",
    "compile:ui": "rm -rf dist/ && parcel build src/frontend/src/index.html",
    "compress:ui": "brotli dist/*",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "postinstall": "npm run build:ui"
  },
  "standard": {
    "env": [
      "jest"
    ],
    "ignore": []
  },
  "types": "lib/",
  "dependencies": {
    "@feathersjs/authentication": "^4.5.3",
    "@feathersjs/authentication-client": "^4.5.3",
    "@feathersjs/authentication-local": "^4.5.3",
    "@feathersjs/authentication-oauth": "^4.5.3",
    "@feathersjs/client": "^4.5.3",
    "@feathersjs/configuration": "^4.5.3",
    "@feathersjs/errors": "^4.5.3",
    "@feathersjs/express": "^4.5.3",
    "@feathersjs/feathers": "^4.5.3",
    "@feathersjs/primus-client": "^4.5.3",
    "@feathersjs/rest-client": "^4.5.3",
    "@feathersjs/socketio": "^4.5.3",
    "@feathersjs/socketio-client": "^4.5.3",
    "@feathersjs/transport-commons": "^4.5.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "feathers-nedb": "^5.1.0",
    "helmet": "^3.22.0",
    "http-server": "^0.12.1",
    "nedb": "^1.8.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "serve-favicon": "^2.5.0",
    "shortid": "^2.2.15",
    "socket.io-client": "^2.3.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/helmet": "0.0.45",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/nedb": "^1.8.9",
    "@types/react": "^16.9.34",
    "@types/serve-favicon": "^2.5.0",
    "@types/shortid": "0.0.29",
    "@types/socket.io-client": "^1.4.32",
    "axios": "^0.19.2",
    "concurrently": "^5.1.0",
    "jest": "^25.4.0",
    "nodemon": "^2.0.3",
    "parcel-bundler": "^1.12.4",
    "shx": "^0.3.2",
    "ts-jest": "^25.4.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  }
}
